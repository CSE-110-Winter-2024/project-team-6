<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">


    <RadioGroup
        android:id="@+id/Tags"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/HOME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radio_home"
            android:buttonTint="#FFEB3B"
            android:text="Home" />

        <RadioButton
            android:id="@+id/WORK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radio_work"
            android:buttonTint="#2196F3"
            android:text="Work" />

        <RadioButton
            android:id="@+id/SCHOOL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radio_school"
            android:buttonTint="#E91E63"
            android:text="School" />

        <RadioButton
            android:id="@+id/ERRANDS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radio_errands"
            android:buttonTint="#4CAF50"
            android:text="Errands" />
    </RadioGroup>

    <EditText
        android:id="@+id/editTextDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter text" />
<RadioGroup
    android:id="@+id/periodOptions"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RadioButton
        android:id="@+id/dailyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily"
         />

    <RadioButton
        android:id="@+id/weeklyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weekly"
         />

    <RadioButton
        android:id="@+id/monthlyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monthly"
         />

    <RadioButton
        android:id="@+id/yearlyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yearly"
        />
</RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starting on: "
        android:textSize="16sp"
        android:layout_gravity="center_vertical"/>
    <EditText
        android:id="@+id/yearInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Year"
        android:inputType="number"/>

    <EditText
        android:id="@+id/monthInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Month"
        android:inputType="number"/>

    <EditText
        android:id="@+id/dayInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Day"
        android:inputType="number"/>

</LinearLayout>